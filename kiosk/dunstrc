# Dunst Configuration for Xibo Kiosk

[global]
    # Display notifications on monitor 0
    monitor = 0

    # Follow mouse focus
    follow = mouse

    # Geometry
    width = 400
    height = 100
    origin = top-right
    offset = 20x50

    # Appearance
    transparency = 10
    padding = 16
    horizontal_padding = 16
    frame_width = 2
    frame_color = "#4a90d9"
    separator_color = frame

    # Font
    font = Sans 14

    # Text
    line_height = 4
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center

    # Behavior
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false

    # Icons
    icon_position = left
    min_icon_size = 32
    max_icon_size = 64

    # History
    sticky_history = yes
    history_length = 20

    # Misc
    title = Dunst
    class = Dunst
    corner_radius = 8

    # Mouse actions
    mouse_left_click = close_current
    mouse_middle_click = do_action
    mouse_right_click = close_all

[urgency_low]
    background = "#2d2d2d"
    foreground = "#ffffff"
    timeout = 5

[urgency_normal]
    background = "#2d2d2d"
    foreground = "#ffffff"
    timeout = 10

[urgency_critical]
    background = "#cc0000"
    foreground = "#ffffff"
    frame_color = "#ff0000"
    timeout = 0
